<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Show Page</title>
  <%- include('../partials/header.ejs')%>
</head>

<body>
  <%- include('../partials/nav.ejs') %>
  
  <!-- page container -->
  <div class="show-box">
    <!-- title -->
    <h1>Story Page</h1>

    <!-- CARD BEGINS -->
    <div class="light bd-dark">

      <!-- Card Ttile -->
      <div class="flex-row">
        <h1> <%= exp.title %> </h1>
      </div>

      <!-- IMG -->
      <img src="<%=exp.img%>" alt="">

 <!-- CARD STORY -->
      <div class="flex-col">
        <h3>The Story:</h3>
        <p><%=exp.story%></p>
      </div>
      
      <!-- CARD LOCATIONS -->
      <div class="flex-row">

        <h3>Locations:</h3>
        <ul>
          <% for (let x in exp.location) { %>
          <li> <%=exp.location[x]%> </li>
          <% } %>
        </ul>
      </div>

      <!-- CARD PEOPLE -->
      <div class="flex-row">
        <h3>Friends: </h3>

        <ul>
          <% for (let x in exp.people) { %>
          <li> <%=exp.people[x]%> </li>
          <% } %>
        </ul>

      </div>

      <!-- CARD ACTIVITIES -->
      <div class="flex-row">
        <h3>Activities</h3>
        <ul>
          <% for (let x in exp.important) {%>
          <li><%=exp.important[x]%></li>
          <%} %>
        </ul>
      </div>

     

    </div>
    <a href="/session/<%=exp._id%>/edit" class="btn">Edit Story</a>
  </div>
</body>

</html>