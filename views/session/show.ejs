<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Show Page</title>
  <%- include('../partials/header.ejs')%>
</head>

<body>
  <%- include('../partials/nav.ejs') %>
  
  <!-- page container -->
  <div class="show-wrapper">
    <!-- title -->
    
    <!-- CARD BEGINS -->
    <div class="show-box light bd-dark">
      <!-- Card Ttile -->
      <div class="flex-row">
        <h1> <%= exp.title %> </h1>
      </div>

      <!-- IMG -->
      <img src="<%=exp.img%>" alt="">

 <!-- CARD STORY -->
      <div class="flex-col">
        <h3>The Story:</h3>
        <p><%=exp.story%></p>
      </div>

      <!-- CARD LOCATIONS -->
      <div class="row center">
        <div class="left">
          <h3>Locations:</h3>
        </div>
        <div class="right">
          <% for (let x in exp.location) { %>
          <li> <%=exp.location[x]%> </li>
          <% } %>
        </div>
      
      </div>

      <!-- CARD PEOPLE -->
      <div class="row center">
        <div class="left">
          <h3>Friends: </h3>
        </div>
        <ul class="right">
          <% for (let x in exp.people) { %>
          <li> <%=exp.people[x]%> </li>
          <% } %>
        </ul>

      </div>

      <!-- CARD ACTIVITIES -->
      <div class="flex-row">
        <div class="left">
          <h3>Activities</h3>
        </div>
        <ul class="right">
          <% for (let x in exp.important) {%>
          <li><%=exp.important[x]%></li>
          <%} %>
        </ul>
      </div>

    </div>

    <a href="/session/<%=exp._id%>/edit" class="btn">Edit Story</a>
  </div>

  <%-include('../partials/footer.ejs')%>
</body>

</html>