<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="flex-col">
      <div class="flex-col card">

        <div class="flex-row">
          <h1> <%= exp.title %> </h1>
        </div>

        <div class="flex-row">
          <div class="half">
            <h3>Locations:</h3>
          </div>
          <div class="half">
            <ul>
              <% if(exp.location >1){%>
                <% for (let x in exp.location) { %>
                  <li> <%=exp.location[x]%> </li>
                <% } %>
              <%}%>
            </ul>
          </div>
        </div>

        <div class="flex-row">
          <div class="half">
            <h3>Friends: </h3>
          </div>
          <div class="half">
            <ul>
              <% if(exp.people >1){%>
                <% for (let x in exp.people) { %>
                  <li> <%=exp.people[x]%> </li>
                <% } %>
              <%}%>
            </ul>
          </div>
        </div>


      </div>
    </div>
  </body>
</html>
