<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Experience</title>
</head>
<body>
    <h1>Post Your Experience</h1>

    
    <div>
        
        <form action="/" method="POST">
            <!-- name -->
            <div class="flex-row">
                <div class="half">
                    <p>Name:</p>
                </div>
                <div class="half">
                    <input type="text" name="name">
                </div>
            </div>
            <!-- place -->
            <div class="flex-row">
                <div class="half">
                    <p>Places:</p>
                </div>
                <div class="half"> 
                    <input type="text" name="location">
                </div>
            </div>
            <!-- People -->
            <div class="row">
                <div class="half">
                    <p>Friends:</p>
                </div>
                <div class="half">
                    <input type="text" name="friends">
                </div>
            </div>
            <!-- Activites -->
            <div class="flex-row">
                <div class="half">
                    Activites:
                </div>
                <div class="half">
                    <input type="text" name="activities">
                </div>
            </div>
             <!--End  -->
            <input type="submit" value="Share Experience">
        </form>
    </div>

</body>
</html>